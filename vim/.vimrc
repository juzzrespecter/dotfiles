syntax on               " ~ enable syntax highlights
set number              " ~ enable numbered lines
set ruler               " ~ shows cursor position
set showmatch
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
colorscheme industry

set wildmenu            " ~ displays command's options menu 
set wildignore=*.docx,*.jpg,*.jpeg,*.png,*.gif,*.pdf,*.mp4,*.mp3

" --- plugins
call plug#begin()
    Plug 'https://github.com/vim-airline/vim-airline'  " --- status bar in Vim
    Plug 'neoclide/coc.nvim', {'branch': 'release'}
    Plug 'https://github.com/fatih/vim-go' " --- Go support
call plug#end()
